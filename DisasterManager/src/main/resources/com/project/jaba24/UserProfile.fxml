<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.jaba24.controllers.UserProfileController"
            stylesheets="@UserAccount.css"
            prefHeight="700.0" prefWidth="800.0">
    <VBox alignment="CENTER" spacing="20" styleClass="root" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="0">
        <Label text="User Profile"/>
        <GridPane hgap="10" vgap="10" styleClass="form-container">
            <Label text="Username:"/>
            <TextField fx:id="usernameField" GridPane.columnIndex="1"/>
            <Label text="Email:" GridPane.rowIndex="1"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Old Password:" GridPane.rowIndex="2"/>
            <PasswordField fx:id="oldPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label text="New Password:" GridPane.rowIndex="3"/>
            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Confirm New Password:" GridPane.rowIndex="4"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Location:" GridPane.rowIndex="5"/>
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
        <Button text="Update Profile" onAction="#updateProfile" styleClass="primary-button"/>
    </VBox>
</AnchorPane>

